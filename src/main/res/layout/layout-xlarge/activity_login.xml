<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/food"
    android:layout_height="match_parent"
    tools:context="com.example.unknown.topchef.Login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/sign"
        >
        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:src="@drawable/logo"
            android:layout_height="wrap_content"
            android:text="Top Chef"
            android:textSize="140dp"
            android:textColor="#fff"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/logintext"
            android:textColor="#ffff"
            android:textSize="40sp"
            android:id="@+id/txtsologan"
            />

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/loginorsignup"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        >
        <info.hoang8f.widget.FButton
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:textSize="35dp"
            android:textAllCaps="false"
            android:text="@string/sign_up"
            android:id="@+id/SignupButton"
            app:shadowColor="#30ffffff"
            app:shadowEnabled="true"
            app:cornerRadius="4dp"
            android:textColor="#000"
            app:shadowHeight="3dp"
            app:fButtonColor="#80ffffff"
            android:layout_margin="8dp"
            />
        <info.hoang8f.widget.FButton
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="Log In"
            android:textSize="35dp"
            android:id="@+id/LoginButton"
            android:textAllCaps="false"
            app:shadowColor="#80ffffff"
            android:textColor="#000"
            app:shadowEnabled="true"
            app:cornerRadius="4dp"
            app:fButtonColor="#80ffffff"
            app:shadowHeight="3dp"
            android:layout_margin="8dp"
            />
    </LinearLayout>
</RelativeLayout>
